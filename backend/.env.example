# ========================================
# ENVIRONNEMENT: DEVELOPMENT
# Copier ce fichier en .env et remplir les valeurs
# ========================================

# Environment
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Base de donn√©es PostgreSQL
DATABASE_URL=postgresql://atomic_user:atomic_password@localhost:5432/atomic_db

# JWT Authentication
JWT_SECRET=change-this-secret-key-in-production-use-long-random-string
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=change-this-refresh-secret-in-production
REFRESH_TOKEN_EXPIRES_IN=30d

# Email Service (SendGrid example)
EMAIL_PROVIDER=sendgrid
EMAIL_FROM=noreply@champcorp.com
EMAIL_FROM_NAME=ATOMIC App
SENDGRID_API_KEY=SG.your-sendgrid-api-key
EMAIL_VERIFICATION_URL=http://localhost:3000/api/v1/auth/verify-email
PASSWORD_RESET_URL=http://localhost:3000/api/v1/auth/reset-password

# Push Notifications - APNs (iOS)
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apple-team-id
APNS_KEY_PATH=./certs/AuthKey_XXXXXXXXXX.p8
APNS_BUNDLE_ID=com.champcorp.atomic
APNS_PRODUCTION=false

# Apple Sign-In
APPLE_CLIENT_ID=com.champcorp.atomic
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./certs/AuthKey_XXXXXXXXXX.p8

# Google Sign-In
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Storage - AWS S3 (pour photos de profil)
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=atomic-profile-pictures
AWS_REGION=us-east-1
AWS_S3_PUBLIC_URL=https://atomic-profile-pictures.s3.amazonaws.com

# Alternative Storage - Cloudinary
# STORAGE_PROVIDER=cloudinary
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# URLs Frontend (pour emails et redirections)
FRONTEND_URL=http://localhost:8081
WEB_URL=https://champcorp.com/atomic

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes en ms
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5

# CORS
CORS_ORIGIN=http://localhost:8081,exp://

# Monitoring - Sentry (optionnel)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Analytics (optionnel)
ANALYTICS_ENABLED=true

# Logs
LOG_LEVEL=debug  # debug, info, warn, error

# Company Info
COMPANY_NAME=Champ Corp
COMPANY_EMAIL=support@champcorp.com
PRIVACY_POLICY_URL=https://champcorp.com/atomic/privacy
TERMS_OF_SERVICE_URL=https://champcorp.com/atomic/terms

# Jobs & Cron
ENABLE_CRON_JOBS=true
NOTIFICATION_BATCH_SIZE=100

# Features Flags (optionnel)
FEATURE_GUEST_MODE=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_DATA_EXPORT=true
